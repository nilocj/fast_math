@buildgfortran
option build --compiler gfortran --flag "-cpp -O3 -march=native"

@testgfortran
option test --compiler gfortran --flag "-cpp -O3 -march=native"


@buildifort
option build --compiler ifort --flag "-O2"

@testifort
option test --compiler ifort --flag "-O2"


@buildifx
option build --compiler ifx --flag "-O2"

@testifx
option test --compiler ifx --flag "-O2"


@buildnvfortran
option build --compiler nvfortran --flag "-Mpreprocess -fast"

@testnvfortran
option test --compiler nvfortran --flag "-Mpreprocess -fast"
